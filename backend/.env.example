# Environment
NODE_ENV=development
PORT=5000

# Database - Neon PostgreSQL
DATABASE_URL=postgresql://username:password@host/database?sslmode=require
DIRECT_URL=postgresql://username:password@host/database?sslmode=require

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key
JWT_EXPIRE_TIME=15m
JWT_REFRESH_EXPIRE_TIME=7d

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@grandpro-hmso.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+234xxxxxxxxxx

# WhatsApp Business API
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your-whatsapp-token
WHATSAPP_PHONE_ID=your-phone-id

# File Storage (AWS S3 or Cloudinary)
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=grandpro-hmso-files

# OR Cloudinary
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Payment Gateway (Paystack/Flutterwave for Nigeria)
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxx

# NHIS Integration
NHIS_API_URL=https://api.nhis.gov.ng
NHIS_API_KEY=your-nhis-api-key

# HMO Integration Keys
HMO_API_ENDPOINTS={}

# Telemedicine (Agora/Twilio Video)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# Monitoring
SENTRY_DSN=https://xxxx@sentry.io/xxxx
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Nigerian Timezone
TZ=Africa/Lagos

# API Keys for External Services
GOOGLE_MAPS_API_KEY=your-google-maps-key
ANALYTICS_API_KEY=your-analytics-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_TELEMEDICINE=true
ENABLE_AI_FEATURES=false
ENABLE_BLOCKCHAIN=false
